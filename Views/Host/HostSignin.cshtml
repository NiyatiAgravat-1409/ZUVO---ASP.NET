        @{
    Layout = null;
}
@model ZUVO_MVC_.ViewModels.HostLoginViewModel;
@{
    ViewData["Title"] = "Host Sign In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Host Sign In - ZUVO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #E5D5B3;
            font-family: Arial, sans-serif;
            padding: 0;
            margin-top: 100px;
        }

        .signin-container {
            display: flex;
            height: 100vh;
            width: 100%;
            justify-content: center;
            align-items: center;
            margin-top: 200px;
            padding: 0;
            margin: 0;
        }

        .signin-box {
            display: flex;
            background: #3C2A1E;
            width: 100%;
            border-radius: 10px;
            overflow: hidden;
        }

        .signin-left {
            width: 50%;
            background: #3C2A1E;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px;
        }

            .signin-left img {
                max-width: 100%;
            }

        .signin-right {
            width: 50%;
            background: #E5D5B3;
            padding: 40px;
        }

        .form-control {
            background: #5A4536;
            color: white;
            border: none;
        }

            .form-control::placeholder {
                color: #ccc;
            }

        .btn-primary {
            background: #5A4536;
            border: none;
            width: 100%;
        }

        .btn-social {
            background: #5A4536;
            border: none;
            width: 100%;
            margin-top: 10px;
        }

        .forgot-password {
            color: #5A4536;
            font-size: 14px;
            float: right;
        }

        .signup-link {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container signin-container">
        <div class="signin-box">
            <!-- Left Side Image -->
            <div class="signin-left">
                <img src="~/images/LoginIl.png" alt="Car Rental">
            </div>

            <!-- Right Side Form -->
            <div class="signin-right">
                <h3 class="text-center mb-4">Welcome Back 👋</h3>

                <form method="post" asp-controller="Host" asp-action="HostSignin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Example@email.com" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="at least 8 characters" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <a asp-controller="Account" asp-action="VerifyEmail" class="forgot-password">Forgot Password</a>
                    </div>

                    <button type="submit" class="btn btn-primary">Sign In</button>

                    <hr>

                    <button type="button" class="btn btn-social">
                        <img src="~/images/google-icon.png" width="20"> Sign in with Google
                    </button>

                    <button type="button" class="btn btn-social">
                        <img src="~/images/facebook-icon.png" width="20"> Sign in with Facebook
                    </button>

                    <div class="signup-link">
                        Don't have an account? <a href="/Host/HostSignUp">Sign Up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
