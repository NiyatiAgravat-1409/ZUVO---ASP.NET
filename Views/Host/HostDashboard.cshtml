@model IEnumerable<ZUVO_MVC_.Models.Car>
@inject ZUVO_MVC_.Data.AppDbContext _context
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Host Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #F5F5DC;
        }

        .navbar {
            background-color: #D4C7A1;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
           
            
        }

        .navbar logo{
                width: 30px;
                margin-right: 10px;
        }

            .navbar a {
                margin: 0 15px;
                text-decoration: none;
                color: black;
                font-weight: bold;
            }

        .ListYourCar:hover {
            background: #4A3F35;
            transform: scale(1.05);
        }

        .ListYourCar {
            background: #8B572A;
            color: white;
            font-size: 18px;
            font-weight: bold;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }


        


        .welcome {
            font-size: 24px;
            font-weight: bold;
            padding: 20px;
        }

        .banner img {
            width: 100%;
        }

        .steps-container {
            display: flex;
            justify-content: space-around;
            padding: 20px;
            background-color: #D4C7A1;
            text-align: center;
        }

        .step {
            font-size: 18px;
            font-weight: bold;
        }

        .cars-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
            margin-top: 20px;
        }

        .car-card {
            background-color: #d8cbb0; /* similar to the background in the image */
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 260px;
            overflow: hidden;
            padding: 16px;  
            position: relative;
            font-family: 'Segoe UI', sans-serif;
        }

        .car-card:hover {
            transform: translateY(-5px);
        }

            .car-card img {
                width: 100%;
                height: 140px;
                object-fit: contain;
                background-color: #2d251e; /* dark brownish background behind image */
                border-radius: 8px;
                margin-bottom: 12px;
            }

            .car-card h3 {
                font-size: 18px;
                font-weight: bold;
                margin: 0 0 8px;
            }

        .car-details p {
            margin: 4px 0;
            font-size: 14px;
            display: flex;
            align-items: center;
        }

        .car-details {
            color: #666;
            font-size: 14px;
            margin: 5px 0;
        }

        .car-price {
            font-weight: bold;
            margin-top: 10px;
            font-size: 16px;
            color: #333;
        }

        .car-actions {
            margin-top: 12px;
            display: flex;
            justify-content: space-between;
        }

        .car-actions button {
            padding: 6px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
        }

        .btn-edit, .btn-delete {
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }


        .btn-edit {
            background-color: #4caf50;
            color: white;
        }

        .btn-delete {
            background-color: #f44336;
            color: white;
        }

        .btn-edit:hover {
            background-color: #2a221b;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        .car-card::after {
            content: "";
            position: absolute;
            top: 12px;
            right: 12px;
            width: 10px;
            height: 10px;
            background-color: green;
            border-radius: 50%;
        }
        .no-cars {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 18px;
        }

        /*FOOTER*/
        .social-container {
            width: 100%;
            margin: 0;
            text-align: center;
            padding: 40px 0;
            background-color: #D3C6A4; /* Background color */
        }

        .social-header {
            background-color: #3D3229;
            color: white;
            font-weight: bold;
            padding: 10px;
            font-size: 18px;
            border-radius: 8px 8px 0 0;
            text-align: left;
            padding-left: 15px;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
            padding: 20px 0;
        }

            .social-icons a img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                transition: 0.3s ease;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
                background-color: #3D3229;
            }

                .social-icons a img:hover {
                    transform: scale(1.1);
                }

        .support-text {
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
        }

            .support-text a {
                text-decoration: underline;
                color: black;
            } 
    </style>
</head>
<body>
    <header>
    <div class="navbar">
        <div class="logo"><img src="~/images/Designer__2_-removebg-preview 1.png" alt="Logo"></div>
        <div>
            <a href="#home">Home</a>
            <a asp-controller="Host" asp-action="Listyourcar">
            Add Car
            </a>
            <a href="#your-cars">Your Cars</a>
            <a href="#contact">Contact Us</a>
        </div>
            <div>
                <a asp-controller="Host" asp-action="HostProfile">
                    <img src="~/images/Account circle.png" alt="Profile" class="profile-icon">
                </a>
            </div>
    </div>
    </header>

    <div>
    <div class="welcome">Welcome, @ViewBag.HostName!</div>
    <a asp-controller="Host" asp-action="Listyourcar"> <button class="ListYourCar">List Your car</button></a>

    <div class="banner">
        <img src="~/images/image 63.png" alt="Cars">
    </div>
    </div>

    <div class="steps-container">
        <div class="step">1. LIST YOUR CAR 🚗</div>
        <div class="step">2. SET AVAILABILITY ⏳</div>
        <div class="step">3. START EARNING 🚀</div>
    </div>

    <div class="cars-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var car in Model)
            {
                var primaryPhoto = car.Photos?.FirstOrDefault(p => p.IsPrimary);

                <div class="car-card">
                    @if (primaryPhoto != null)
                    {
                        <img src="~/@primaryPhoto.FilePath" alt="@car.Make @car.Model">
                    }
                    else
                    {
                        <img src="~/images/default-car.jpg" alt="Default Car Image">
                    }
                    <h3>@car.Make @car.Model (@car.Year)</h3>
                    <div class="car-details">
                        <p>Color: @car.Color</p>
                        <p>Transmission: @car.Transmission</p>
                        <p>Fuel Type: @car.FuelType</p>
                        <p>Seats: @car.Seats</p>
                    </div>
                    <div class="car-price">
                        ₹@car.DailyRate/day
                    </div>
                    <div class="car-actions">
                        <button class="btn-edit" onclick="editCar('@car.CarId')">Edit</button>
                        <button class="btn-delete" onclick="deleteCar('@car.CarId')">Delete</button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-cars">
                <p>You haven't listed any cars yet.</p>
                <p>Click the "List Your Car" button to get started!</p>
            </div>
        }
    </div>

    <!--fOOTER-->
    <div class="social-container">
        <div class="social-header">Get connected with us on Social Network</div>

        <div class="social-icons">
            <a href="#"><img src="~/images/YouTube.png" alt="YouTube"></a>
            <a href="#"><img src="~/images/X.png" alt="Twitter"></a>
            <a href="#"><img src="~/images/Facebook F.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/Instagram.png" alt="Instagram"></a>
        </div>

        <div class="support-text">
            For Help and Support <a href="#">Click Here</a>
        </div>
    </div>

    <script>
        function editCar(carId) {
            window.location.href = `/Host/EditCarDetails/${carId}`;
        }

        function deleteCar(carId) {
            if (confirm('Are you sure you want to delete this car?')) {
                fetch(`/Host/DeleteCar/${carId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error deleting car. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting car. Please try again.');
                });
            }
        }
    </script>
</body>
</html>

