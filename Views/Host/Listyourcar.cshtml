        <div class="navbar">
            <img src="/images/Designer__2_-removebg-preview 1.png" alt="Logo">
            <h2>ADD YOUR CAR DETAILS</h2>
            <a asp-controller="Host" asp-action="EditCarDetails">
                <img src="~/images/Account circle.png" alt="Profile" class="profile-icon">
            </a>
        </div>

        <div class="container mt-4">
            <form asp-controller="Host" asp-action="Listyourcar" method="post" enctype="multipart/form-data" id="carForm">
        @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="HostId" />
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["Error"]
                    </div>
                }
                <div class="section">
                    <h2>CAR INFORMATION</h2>
                    <div class="form-group">
                        <label asp-for="Make" class="control-label"></label>
                        <input asp-for="Make" class="form-control" required />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <select asp-for="Model" class="form-control" required>
                            <option value="">-- Select Car Model --</option>
                            @if (ViewBag.CarTypes != null)
                            {
                                foreach (var car in ViewBag.CarTypes as List<ZUVO_MVC_.Models.CarType>)
                                {
                                    <option value="@car.Name">@car.Name</option>
                                }
                            }
                            else
                            {
                                <option disabled>No car models available</option>
                            }
                        </select>
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" type="number" min="1900" max="2099" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LicensePlateNo" class="control-label"></label>
                        <input asp-for="LicensePlateNo" class="form-control" />
                        <span asp-validation-for="LicensePlateNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VIN" class="control-label"></label>
                        <input asp-for="VIN" class="form-control" />
                        <span asp-validation-for="VIN" class="text-danger"></span>
                    </div>
                </div>

                <div class="section">
                    <h2>CAR FEATURES</h2>
                    <div class="form-group">
                        <label asp-for="Transmission" class="control-label"></label>
                        <input asp-for="Transmission" class="form-control" />
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FuelType" class="control-label"></label>
                        <input asp-for="FuelType" class="form-control" />
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Seats" class="control-label"></label>
                        <input asp-for="Seats" type="number" min="1" class="form-control" />
                        <span asp-validation-for="Seats" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Mileage" class="control-label"></label>
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AdditionalFeatures" class="control-label"></label>
                        <input asp-for="AdditionalFeatures" class="form-control" />
                        <span asp-validation-for="AdditionalFeatures" class="text-danger"></span>
                    </div>
                </div>

                <div class="section">
                    <h2>RENTAL DETAILS</h2>
                    <div class="form-group">
                        <label asp-for="DailyRate" class="control-label"></label>
                        <input asp-for="DailyRate" class="form-control" />
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AllowCancellation" class="control-label"></label>
                        <div class="radio-group">
                            <input type="radio" asp-for="AllowCancellation" value="true" /> Yes
                            <input type="radio" asp-for="AllowCancellation" value="false" /> No
                        </div>
                        <span asp-validation-for="AllowCancellation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MinRentalPeriod" class="control-label"></label>
                        <input asp-for="MinRentalPeriod" class="form-control" />
                        <span asp-validation-for="MinRentalPeriod" class="text-danger"></span>
                    </div>
                </div>

                <div class="section">
                    <h2>SAFETY AND INSURANCE</h2>
                    <div class="form-group">
                        <label asp-for="InsuranceType" class="control-label"></label>
                        <input asp-for="InsuranceType" class="form-control" />
                        <span asp-validation-for="InsuranceType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InsuranceNumber" class="control-label"></label>
                        <input asp-for="InsuranceNumber" class="form-control" />
                        <span asp-validation-for="InsuranceNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InsuranceCompany" class="control-label"></label>
                        <input asp-for="InsuranceCompany" class="form-control" />
                        <span asp-validation-for="InsuranceCompany" class="text-danger"></span>
                    </div>
                </div>

                <div class="section">
                    <h2>DOCUMENTS</h2>
                    <div class="form-group">
                        <label asp-for="CarRegistrationDocument" class=" control-label"></label>
                        <div class="file-upload">
                            <input asp-for="CarRegistrationDocument" type="file" class="form-control" accept=".pdf,.jpg,.png" />
                            <p class="file-hint">File should be less than 20MB and .pdf, .jpg, or .png only</p>
                        </div>
                        <span asp-validation-for="CarRegistrationDocument" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InsuranceCertificate" class="control-label"></label>
                        <div class="file-upload">
                            <input asp-for="InsuranceCertificate" type="file" class="form-control" accept=".pdf,.jpg,.png" />
                            <p class="file-hint">File should be less than 20MB and .pdf, .jpg, or .png only</p>
                        </div>
                        <span asp-validation-for="InsuranceCertificate" class="text-danger"></span>
                    </div>
                </div>

                <div class="section">
                    <h2>PHOTOS</h2>
                    <div class="form-group">
                        <label class="control-label">Car Photos</label>
                        <div class="photo-upload-container">
                            <label for="photoInput" class="custom-file-upload">
                                <i class="fas fa-camera"></i> Add Photos
                            </label>
                            <input id="photoInput" type="file" name="carPhotos" accept="image/*" multiple />
                            <div class="upload-progress">
                                <progress value="0" max="100"></progress>
                                <div class="upload-status"></div>
                            </div>
                            <div class="photo-preview" id="photoPreview"></div>
                            <input type="hidden" asp-for="UploadedPhotoPaths" id="uploadedPhotos" />
                            <span asp-validation-for="CarPhotos" class="text-danger"></span>
                            <p class="file-hint">Upload photos one by one. The first photo will be used as the primary image.</p>
                            <button type="button" id="uploadButton" class="btn btn-primary">Upload</button>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="submit-btn">SUBMIT</button>
                </div>
            </form>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const form = document.getElementById('carForm');
                const photoInput = document.getElementById('photoInput');
                const photoPreview = document.getElementById('photoPreview');
                const uploadedPhotosInput = document.getElementById('uploadedPhotos');

                // Client-side validation
                form.addEventListener('submit', function (e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });

                // Photo upload handling
                document.getElementById('uploadButton').addEventListener('click', async () => {
                    const files = photoInput.files;
                    if (!files || files.length === 0) {
                        alert("Please select photo(s) first.");
                        return;
                    }

                    const formData = new FormData();
                    for (let file of files) {
                        formData.append('carPhotos', file);
                    }

                    try {
                        const response = await fetch('/Host/UploadCarPhotos', {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        });

                        if (!response.ok) {
                            throw new Error('Upload failed');
                        }

                        const result = await response.json();
                        
                        // Add preview for each uploaded photo
                        for (let file of files) {
                            const reader = new FileReader();
                            reader.onload = function (e) {
                                const photoDiv = document.createElement('div');
                                photoDiv.className = 'photo-preview-item';

                                const img = document.createElement('img');
                                img.src = e.target.result;
                                img.className = 'photo-preview-img';

                                const removeBtn = document.createElement('button');
                                removeBtn.className = 'remove-photo';
                                removeBtn.innerText = '×';
                                removeBtn.onclick = function () {
                                    photoPreview.removeChild(photoDiv);
                                };

                                photoDiv.appendChild(img);
                                photoDiv.appendChild(removeBtn);
                                photoPreview.appendChild(photoDiv);
                            };
                            reader.readAsDataURL(file);
                        }

                        // Update hidden input with uploaded photo paths
                        if (result.photoPaths) {
                            uploadedPhotosInput.value = result.photoPaths.join(',');
                        }
                    } catch (error) {
                        console.error('Upload error:', error);
                        alert('Failed to upload photos. Please try again.');
                    }
                });
            });
        </script>

