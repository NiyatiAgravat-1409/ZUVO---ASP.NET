    <style>
        /* Navbar styling */
        .navbar {
            background-color: #D9C9A3;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Container for flex layout */
        .container {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Logo and title */
        .logo-section {
            display: flex;
            align-items: center;
        }

        .logo {
            height: 40px;
        }

        .title {
            font-size: 20px;
            font-weight: bold;
            margin-left: 10px;
        }

        /* Right-side buttons */
        .nav-buttons {
            display: flex;
            align-items: center;
        }

        .btn {
            background-color: #3D2C1D;
            color: white;
            border: none;
            padding: 8px 15px;
            margin-right: 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
        }

            .btn:hover {
                background-color: #2B1D13;
            }

        /* Profile icon */
        .profile-icon {
            height: 40px;
            cursor: pointer;
            border-radius: 50%;
        }
        /* Profile Page Container */
        .profile-container {
            display: flex;
            width: 100%;
            margin: 20px auto;
        }

        /* Sidebar */
        .sidebar {
            width: 25%;
            background: #E2D1AC;
            padding: 20px;
            text-align: center;
            border-radius: 10px;
        }

        .profile-pic img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

        .profile-pic h3,
        .profile-pic p {
            margin: 5px 0;
            font-size: 14px;
        }

        .edit-icons {
            display: flex;
            justify-content: center;
            margin: 10px 0;
        }

        .edit-btn, .verify-btn {
            background: #3D2C1D;
            color: white;
            border: none;
            padding: 8px;
            margin: 5px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
        }

        .nav-btn {
            display: block;
            width: 100%;
            background: #3D2C1D;
            color: white;
            border: none;
            padding: 10px;
            margin: 8px 0;
            cursor: pointer;
            border-radius: 5px;
            text-align: left;
        }

        /* Main Content */
        .main-content {
            width: 75%;
            padding: 20px;
            background: #D9C9A3;
            border-radius: 10px;
            margin-left: 20px;
        }

        h2 {
            text-align: center;
            color: #3D2C1D;
        }

        .info-section {
            background: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .License {
            background: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        h3 {
            color: #3D2C1D;
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }

        input {
            width: 100%;
            padding: 8px;
            border: 1px solid #CCC;
            border-radius: 5px;
            background-color: #F7F3E9;
            margin-top: 5px;
        }

        /* Payment and Billing Section */
        .link-wallet {
            background: #3D2C1D;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
        }

        .balance-section {
            display: flex;
            justify-content: space-between;
            background: #D9C9A3;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
        }

        /* Transactions */
        .transaction {
            display: flex;
            align-items: center;
            background: #3D2C1D;
            padding: 10px;
            border-radius: 10px;
            color: white;
            margin-top: 10px;
        }

            .transaction img {
                width: 60px;
                height: 40px;
                border-radius: 5px;
                margin-right: 15px;
            }

        .transaction-details {
            flex-grow: 1;
        }

        .download-invoice {
            background: #E2D1AC;
            color: black;
            border: none;
            padding: 8px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 12px;
        }

    </style>
</head>
