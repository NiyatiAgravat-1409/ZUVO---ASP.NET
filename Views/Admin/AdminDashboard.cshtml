@{
    Layout = null;
}
@model List<ZUVO.Models.CarType>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f4f1ea;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background-color: #d5ceb4;
            min-height: 100vh;
        }

            .sidebar a {
                color: #3e3e3e;
                text-decoration: none;
                display: block;
                padding: 12px 20px;
            }

                .sidebar a:hover {
                    background-color: #c5bfa3;
                }

        .card-box {
            background-color: #eae4d3;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 15px;
        }

        .chart-bar {
            height: 150px;
            background: #6b5e4e;
            border-radius: 6px;
        }

            .chart-bar.red {
                background-color: #d04a3f;
            }

        .progress-bar {
            height: 10px;
        }

        .btn-check {
            background-color: #d94b3b;
            color: #fff;
            border: none;
            padding: 8px 16px;
            width: 100%;
        }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-2 sidebar d-flex flex-column">
                <h3 class="p-3">Admin</h3>
                <a href="AdminDashboard">Dashboard</a>
                <a href="Bookings">Bookings</a>
                <a href="Units">Units</a>
                <a href="Clients">Clients</a>
                <a href="Payments">Payments</a>
            </div>

            <!-- Main Dashboard -->
            <div class="col-md-7 p-4">
                <h4>DASHBOARD</h4>

                <!-- Summary Cards -->
                <div class="row">
                    <div class="col-md-3 card-box text-center">Total Revenue<br><strong>₹340599</strong></div>
                    <div class="col-md-3 card-box text-center">Total Revenue<br><strong>₹340599</strong></div>
                    <div class="col-md-3 card-box text-center">Total Revenue<br><strong>₹340599</strong></div>
                    <div class="col-md-3 card-box text-center">Total Revenue<br><strong>₹340599</strong></div>
                </div>

                <!-- Chart and Status -->
                <div class="row">
                    <div class="col-md-6 card-box">
                        <h6>Booking Overview <span class="float-end">This Year</span></h6>
                        <div class="d-flex justify-content-between align-items-end" style="height: 200px">
                            <div class="chart-bar" style="height: 70px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 90px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 75px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 60px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 120px; width: 8%;"></div>
                            <div class="chart-bar red" style="height: 100px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 90px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 110px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 70px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 80px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 60px; width: 8%;"></div>
                            <div class="chart-bar" style="height: 70px; width: 8%;"></div>
                        </div>
                    </div>
                    <div class="col-md-6 card-box">
                        <h6>Rent Status <span class="float-end">This Week</span></h6>
                        <p><span style="color: green">●</span> Hired - 52%</p>
                        <p><span style="color: red">●</span> Pending - 27%</p>
                        <p><span style="color: gray">●</span> Cancelled - 21%</p>
                    </div>
                </div>

                <!-- Reminders -->
                <div class="card-box">
                    <h6>Reminders <button class="btn btn-sm btn-dark float-end">+</button></h6>
                    <div class="mb-2 p-2 bg-light rounded">Inspect and service the fleet vehicles. <br><small>2025-10-10</small></div>
                    <div class="mb-2 p-2 bg-light rounded">Inspect and service the fleet vehicles. <br><small>2025-10-10</small></div>
                    <div class="mb-2 p-2 bg-light rounded">Inspect and service the fleet vehicles. <br><small>2025-10-10</small></div>
                </div>
            </div>

            <!-- Right Panel -->
            
            <div class="col-md-3 p-4">
                <div class="card-box">
                    <h6>Car Availability</h6>
                    <select class="form-select mb-2">
                        <option>Car Type</option>
                    </select>
                    <input type="date" class="form-control mb-2" />
                    <input type="date" class="form-control mb-2" />
                    <div class="btn-check"> <button class="btn-check">Check</button></div>
                </div>
           
                <div class="card-box mt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6>Car Types</h6>
                        <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#addCarModal">+</button>
                    </div>

                    @foreach (var car in Model)
                    {
                        var barColor = "bg-secondary";
                        if (car.BookCount < 30) { barColor = "bg-danger"; }
                        else if (car.BookCount < 50) { barColor = "bg-warning"; }
                        else { barColor = "bg-dark"; }

                        // For demo, assume max BookCount = 100
                        var percentage = car.BookCount > 100 ? 100 : car.BookCount;
                        <div class="mb-2">
                            <strong>@car.CarName</strong>
                            <div class="progress">
                                <div class="progress-bar @barColor" style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
    <!-- Add Car Modal -->
    <!-- Add Car Modal -->
    <div class="modal fade" id="addCarModal" tabindex="-1" aria-labelledby="addCarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form asp-controller="Admin" asp-action="Create" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCarModalLabel">Add New Car Type</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <div class="mb-3">
                            <label class="form-label">Car Type</label>
                            <input type="text" name="CarTypeName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Car Name</label>
                            <input type="text" name="CarName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Seats (5 or 7)</label>
                            <input type="number" name="NumberOfSeats" class="form-control" required min="2" max="10" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fuel Type</label>
                            <input type="text" name="Fuel" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Price Per Day</label>
                            <input type="number" name="PricePerDay" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Booking Count</label>
                            <input type="number" name="BookCount" class="form-control" required />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Add Car</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
s
    <script src="https://cdn.jsdelivr.net/npm/@(Html.Raw("popperjs/core@2.11.8/dist/umd/popper.min.js"))"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>

</body>
</html>
