@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Clients</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fefefe;
        }

        .sidebar {
            background-color: #D6CFB4;
            width: 220px;
            height: 100vh;
            padding: 20px;
            position: fixed;
        }

            .sidebar h4 {
                font-weight: bold;
                margin-bottom: 40px;
            }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
                padding: 10px 15px;
                margin-bottom: 5px;
            }

                .sidebar .nav-link.active {
                    background-color: #bfb48f;
                    border-radius: 5px;
                }

        .main-content {
            margin-left: 240px;
            padding: 30px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .table-container {
            background-color: #D6CFB4;
            border-radius: 10px;
            padding: 15px;
        }

        .btn-add {
            background-color: #5d4433;
            color: white;
            font-weight: 500;
        }

            .btn-add:hover {
                background-color: #3e2f22;
            }

        .table thead {
            background-color: #4c3a2b;
            color: white;
        }

        .table td,
        .table th {
            vertical-align: middle;
        }

        .btn-view {
            background-color: #4c3a2b;
            color: white;
            font-size: 0.85rem;
            padding: 5px 12px;
            border-radius: 5px;
            border: none;
        }

        .action-icons i {
            margin: 0 6px;
            cursor: pointer;
            color: #4c3a2b;
            font-size: 1rem;
        }

            .action-icons i:hover {
                color: #000;
            }

        .search-bar {
            width: 250px;
        }

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Admin</h4>
        <nav class="nav flex-column">
            <a class="nav-link" href="AdminDashboard">Dashboard</a>
            <a class="nav-link" href="Bookings">Bookings</a>
            <a class="nav-link" href="Units">Units</a>
            <a class="nav-link active" href="Clients">Clients</a>
            <a class="nav-link" href="Payments">Payments</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header mb-4">
            <h3><strong>CLIENTS</strong></h3>
            <div class="d-flex align-items-center">
                <div class="me-3 text-end">
                    <small>Admin Name</small><br>
                    <span class="text-muted">Admin</span>
                </div>
                <img src="https://via.placeholder.com/40" class="rounded-circle" />
            </div>
        </div>

        <!-- Search + Add -->
        <div class="d-flex justify-content-between align-items-center mb-3 table-container">
            <input type="text" class="form-control search-bar" placeholder="Search Name">
            <button class="btn btn-add">Add Client</button>
        </div>

        <!-- Table -->
        <div class="table-container">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>Client</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Document</th>
                        <th>Earned</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Row example -->
                    <tr>
                        <td>Miraliba Jadeja</td>
                        <td>123-456-7890</td>
                        <td>Street ABC, Plot 23, City, State</td>
                        <td><button class="btn-view">View</button></td>
                        <td><strong>Rs. 2000</strong></td>
                        <td class="action-icons">
                            <i class="fas fa-pen"></i>
                            <i class="fas fa-trash-alt"></i>
                        </td>
                    </tr>
                    <!-- Repeat rows -->
                    <tr>
                        <td>Miraliba Jadeja</td>
                        <td>123-456-7890</td>
                        <td>Street ABC, Plot 23, City, State</td>
                        <td><button class="btn-view">View</button></td>
                        <td><strong>Rs. 2000</strong></td>
                        <td class="action-icons">
                            <i class="fas fa-pen"></i>
                            <i class="fas fa-trash-alt"></i>
                        </td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
