@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Units</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fefefe;
        }

        .sidebar {
            background-color: #d5cba7;
            width: 220px;
            height: 100vh;
            padding: 20px;
            position: fixed;
        }

            .sidebar h4 {
                font-weight: bold;
                margin-bottom: 40px;
            }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
                padding: 10px 15px;
                margin-bottom: 5px;
            }

                .sidebar .nav-link.active {
                    background-color: #bfb48f;
                    border-radius: 5px;
                }

        .main-content {
            margin-left: 240px;
            padding: 30px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .unit-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
        }

            .unit-card .card-body {
                background-color: #4c3a2b;
                padding: 10px;
            }

            .unit-card img {
                width: 100%;
                height: 180px;
                object-fit: contain;
                background-color: #4c3a2b;
            }

        .unit-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
        }

            .unit-info h5 {
                font-size: 1rem;
                margin: 0;
                font-weight: bold;
            }

            .unit-info span {
                font-size: 0.9rem;
                color: #555;
            }

        .unit-actions {
            text-align: right;
            padding: 5px 15px 10px;
        }

            .unit-actions i {
                cursor: pointer;
                margin-left: 15px;
                font-size: 1.1rem;
            }

                .unit-actions i:hover {
                    color: #5d4433;
                }

        .filter-bar input,
        .filter-bar select {
            margin-right: 10px;
        }

        .btn-add {
            background-color: #5d4433;
            color: white;
            font-weight: 500;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Admin</h4>
        <nav class="nav flex-column">
            <a class="nav-link" href="AdminDashboard">Dashboard</a>
            <a class="nav-link" href="Bookings">Bookings</a>
            <a class="nav-link active" href="Units">Units</a>
            <a class="nav-link" href="Clients">Clients</a>
            <a class="nav-link" href="Payments">Payments</a>
        </nav>
    </div>

    <!-- Main Content -->
   
     <section><div class="main-content">
        <div class="header mb-4">
            <h3><strong>UNITS</strong></h3>
            <div class="d-flex align-items-center">
                <div class="me-3 text-end">
                    <small>Admin Name</small><br>
                    <span class="text-muted">Admin</span>
                </div>
                <img src="https://via.placeholder.com/40" class="rounded-circle" />
            </div>
        </div>
    

        <!-- Filters -->
        <div class="d-flex justify-content-between align-items-center mb-4 filter-bar">
            <div class="d-flex">
                <input type="text" class="form-control" placeholder="Search Name" />
                <select class="form-select">
                    <option>Car Type</option>
                </select>
                <select class="form-select">
                    <option>Status</option>
                </select>
            </div>
            <button class="btn btn-add">Add Unit</button>
        </div>

        <!-- Units Grid -->
        <div class="row g-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="unit-card">
                        <div class="card-body">
                            <img src="~/images/Blue_baleno.png" alt="Car Image">
                        </div>
                        <div class="unit-info">
                            <div>
                                <h5>Baleno 2020</h5>
                                <span>₹238/hr</span>
                            </div>
                        </div>
                        <div class="unit-actions">
                            <i class="fas fa-pencil-alt text-dark"></i>
                            <i class="fas fa-trash-alt text-dark"></i>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
