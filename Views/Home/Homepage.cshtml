@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zuvo - Car Rental</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Header */
        .navbar {
            position: sticky;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 50px;
            background: #D6CFB4;
            top: 0;
            z-index: 1000;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
            }

            .navbar img {
                width: 90px;
                margin-right: 10px;
            }

        .nav-links {
            display: flex;
            gap: 20px;
        }

            .nav-links a {
                text-decoration: none;
                color: black;
                font-size: 16px;
                font-weight: 500;
            }

        .auth-buttons {
            display: flex;
            gap: 20px;
        }

            .auth-buttons .sign-in {
                background: #3D3229;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
                text-decoration: none;
            }

        /* Hero Section */
        .hero-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 50px;
            background: linear-gradient(to right, #FFFFFF 100%, #F4F1EC 50%);
        }

        .hero-content {
            max-width: 40%;
        }

            .hero-content h1 {
                font-size: 50px;
                font-weight: bold;
            }

                .hero-content h1 span {
                    color: #3D3229;
                }

            .hero-content p {
                font-size: 20px;
                color: #555;
                margin: 15px 0;
            }

        .hero-buttons {
            display: flex;
            gap: 15px;
        }

            .hero-buttons a {
                text-decoration: none;
                padding: 10px 20px;
                font-size: 16px;
                border-radius: 5px;
            }

        .btn-primary {
            background: #3D3229;
            color: white;
        }

        .btn-secondary {
            background: #D6CFB4;
            color: black;
        }

        /* Car Image */
        .car-image img {
            max-width: 100%;
            height:auto;
        }

        /* Booking Section */
        .booking {
            background: #D6CFB4;
            padding: 40px 20px;
            text-align: center;
            border-radius: 10px;
            margin: 30px auto;
            width: 80vw;
            max-width: 100vw;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .booking h2 {
                font-size: 28px;
                font-weight: bold;
                margin-bottom: 20px;
                color: #4A3F35;
            }

        .booking-form {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
            align-items: center;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            width: 200px;
        }

            .input-group label {
                font-size: 14px;
                font-weight: bold;
                color: #4A3F35;
                margin-bottom: 5px;
            }

            .input-group input,
            .input-group select {
                padding: 12px;
                font-size: 16px;
                border: 2px solid #C4A484;
                border-radius: 5px;
                outline: none;
                transition: 0.3s;
            }

                .input-group input:focus,
                .input-group select:focus {
                    border-color: #8B572A;
                    box-shadow: 0 0 5px rgba(139, 87, 42, 0.5);
                }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
            font-weight: bold;
            color: #4A3F35;
        }

        .search-btn {
            background: #8B572A;
            color: white;
            font-size: 18px;
            font-weight: bold;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

            .search-btn:hover {
                background: #4A3F35;
                transform: scale(1.05);
            }

             /* About Us Section */
      

        .about-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            text-align: left;
            color: black;
            width: 100vw;
            height: 700px;
            position: relative;
            padding: 50px;
            background: url("/images/asphalt-highway 1.png") no-repeat center;
            background-size: cover; /* This ensures full coverage */
        }

        /* Background Highway Image */
    .about-us .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw; /* Set full viewport width */
        height: 100%; /* Ensure full section height */
        background: url("/images/asphalt-highway 1.png") no-repeat center;
        background-size: 100% 100%; /* Ensure it stretches fully */
        z-index: 1;
    }

            


        .about-content {
            position: absolute;
            max-width: 700px;
            padding: 50px;
            margin-left: 50px;
            z-index: 2;
        }

            .about-content h2 {
                font-size: 26px;
                font-weight: bold;
                margin-bottom: 10px;
                
            }

            .about-content h1 {
                font-size: 36px;
                font-weight: bold;
                margin-bottom: 10px;
                
            }

            .about-content p {
                font-size: 16px;
                line-height: 1.6;
                color: #333;
                
            }
        

        /* Car Images Overlay */
        .car-overlay {
            position: absolute;
            bottom: 50px;
            left: 50vw;
            transform: translateX(-50%);
            z-index: 3;
        }

            .car-overlay img {
                width: 90vw;
                max-width: 1000px;
                opacity: 0.9;
                animation: fadeIn 1.5s ease-in-out;
                
            }

            .car-overlay img {
                max-width: 100%;
                height: auto;
                opacity: 0.9;
                animation: fadeIn 1.5s ease-in-out;
            }

            /*Vehicle models*/

        .vehicle-section {
            padding: 30px;
            background: #D6CFB4;
        }

            .vehicle-section h2 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 15px;
            }

        .filters {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .filter-btn, .search-btn {
            padding: 10px 15px;
            background: #3D3229;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        .vehicle-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }

        .vehicle-card {
            background: white;
            padding: px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

            .vehicle-card img {
                width: 100%;
                height: 150px;
                object-fit: contain;
                background: #3D3229;
                border-radius: 10px;
                box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.3);
            }

        .vehicle-details {
            padding: 8px;
        }

            .vehicle-details h3 {
                font-size: 18px;
                margin-bottom: px;
                padding-top: 6px;
            }

            .vehicle-details p {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 10px;
            }

        .vehicle-info {
            display: flex;
            justify-content: space-around;
            font-size: 14px;
            color: #555;
            padding-top: 30px;
        }

        /*FOOTER*/
        .social-container {
            
            width: 100%;
            margin: 0;
            text-align: center;
            padding: 40px 0;
            background-color: #D3C6A4; /* Background color */
        }

        .social-header {
            background-color: #3D3229;
            color: white;
            font-weight: bold;
            padding: 10px;
            font-size: 18px;
            border-radius: 8px 8px 0 0;
            text-align: left;
            padding-left: 15px;
            

        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
            padding: 20px 0;
           
        }

            .social-icons a img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                transition: 0.3s ease;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
                background-color: #3D3229;
            }

                .social-icons a img:hover {
                    transform: scale(1.1);
                }

        .support-text {
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
        }

            .support-text a {
                text-decoration: underline;
                color: black;
            }
       
    </style>
</head>
<body>

    <!-- Header -->
    <header class="navbar">
        
        <div class="logo">
            <img src="~/images/Designer__2_-removebg-preview 1.png" alt="Zuvo Logo">
        </div>
        <ui class="nav-links">
            <a href="">Home</a>
            <a href="about-section">About</a>
            <a href="#">Vehicle Models</a>
            <a href="#">Contact</a>
            <a asp-controller="Host" asp-action="BecomeHost">Become a Host</a>
        </ui>
        <div class="auth-buttons">
            <a class="sign-in" asp-area=""  asp-controller="Account" asp-action="SignIn">SignIn</a>
            
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <p>Plan your trip now</p>
            <h1>Save <span>big</span> with our ZUVO</h1>
            <p>Rent the car of your dreams. Unbeatable prices, unlimited miles, flexible pick-up options and much more.</p>
            <div class="hero-buttons">
                <a href="#" class="btn-primary">Book Ride</a>
                <a href="#" class="btn-secondary">Learn More</a>
            </div>
        </div>
        <div class="car-image">
            <img src="~/images/CAR_IMAGE_BROWN-removebg-preview 2.png" alt="Suzuki Fronx">

        </div>

        <!--main content-->
        <div class="container">
        @RenderBody()
        </div>
    </section>


    <!-- Book a Car Section -->
    <section class="booking">
        <h2>Book a car</h2>
        <div class="booking-form">
            <div class="input-group">
                <label>State</label>
                <input type="text" placeholder="Enter State">
            </div>
            <div class="input-group">
                <label>Location</label>
                <input type="text" placeholder="Enter Location">
            </div>
            <div class="input-group">
                <label>Rent Up</label>
                <input type="date">
            </div>
            <div class="input-group">
                <label>Pick Up</label>
                <input type="date">
            </div>
            <div class="input-group">
                <label>Vehicle Type</label>
                <select>
                    <option>Select Type</option>
                    <option>Sedan</option>
                    <option>SUV</option>
                    <option>Hatchback</option>
                </select>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="delivery">
                <label for="delivery">Home Delivery and Pick Up</label>
            </div>
            <button class="search-btn">Search</button>
        </div>
    </section>

       <!--About Us Section-->
     <section class="about-section">
        <!-- Highway Background -->
        <div class="background">
            
        </div>

        <div class="about-content">
            <h2>About us</h2>
            <h1>Welcome to ZUVO</h1>
            <h1>Reliable cars, remarkable journeys.</h1>
            <p>Your trusted partner for reliable and affordable car rental services. 
                Whether you’re planning a business trip, a weekend getaway, or simply need a vehicle for your daily commute, 
                we are here to make your journey seamless and enjoyable.
            </p>
        </div>


        <!-- Car Images Overlay -->
        <div class="car-overlay">
            <img src="~/images/image 1.png" alt="Car Models">
        </div>
    </section>

    <!--Vehicle models-->

    <section class="vehicle-section">
        <h2>Vehicle Models</h2>
        <div class="filters">
            <button class="filter-btn">Vehicle Type</button>
            <button class="search-btn">🔍</button>
        </div>

        <div class="vehicle-grid">
            <div class="vehicle-card">
                <img src="~/images/Blue_baleno.png" alt="Baleno 2020">
                <div class="vehicle-details">
                    <h3>Baleno 2020</h3>
                    <p>238/hr</p>
                    <div class="vehicle-info">
                        <span>⚙ Manual</span>
                        <span>⛽ Petrol</span>
                        <span>🚗 5 seats</span>
                    </div>
                    <hr>
                </div>
            </div>

            <div class="vehicle-card">
                <img src="~/images/grey_ertiga-removebg-preview 1.png" alt="Maruti Suzuki Ertiga">
                <div class="vehicle-details">
                    <h3>Maruti Suzuki Ertiga</h3>
                    <p>235/hr</p>
                    <div class="vehicle-info">
                        <span>⚙ Manual</span>
                        <span>⛽ Petrol</span>
                        <span>🚗 7 seats</span>
                    </div>
                    <hr>
                </div>
            </div>

            <div class="vehicle-card">
                <img src="~/images/swift_white-removebg-preview 1.png" alt="Maruti Suzuki Swift 2023">
                <div class="vehicle-details">
                    <h3>Maruti Suzuki Swift 2023</h3>
                    <p>145/hr</p>
                    <div class="vehicle-info">
                        <span>⚙ Manual</span>
                        <span>⛽ Petrol</span>
                        <span>🚗 5 seats</span>
                    </div>
                    <hr >
                </div>
            </div>

            <div class="vehicle-card">
                <img src="~/images/celerio-removebg-preview 1.png" alt="Celerio 2024">
                <div class="vehicle-details">
                    <h3>Celerio 2024</h3>
                    <p>145/hr</p>
                    <div class="vehicle-info">
                        <span>⚙ Automatic</span>
                        <span>⛽ Petrol</span>
                        <span>🚗 5 seats</span>
                    </div>
                    <hr>
                </div>
            </div>
        </div>

        <!--fOOTER-->
        <div class="social-container">
            <div class="social-header">Get connected with us on Social Network</div>

            <div class="social-icons">
                <a href="#"><img src="~/images/YouTube.png" alt="YouTube"></a>
                <a href="#"><img src="~/images/X.png" alt="Twitter"></a>
                <a href="#"><img src="~/images/Facebook F.png" alt="Facebook"></a>
                <a href="#"><img src="~/images/Instagram.png" alt="Instagram"></a>
            </div>

            <div class="support-text">
                For Help and Support <a href="#">Click Here</a>
            </div>
        </div>
</body>
</html>

